{
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "The name of the image repository."
        },
        "tag": {
          "type": "string",
          "description": "The image tag, including the SHA hash for immutability."
        },
        "imagePullPolicy": {
          "type": "string",
          "enum": [
            "IfNotPresent",
            "Always",
            "Never"
          ],
          "description": "The image pull policy."
        }
      },
      "required": [
        "repository",
        "tag",
        "imagePullPolicy"
      ]
    },
    "initContainerImage": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "The repository for the init container."
        },
        "tag": {
          "type": "string",
          "description": "The tag for the init container."
        },
        "imagePullPolicy": {
          "type": "string",
          "enum": [
            "IfNotPresent",
            "Always",
            "Never"
          ],
          "description": "The image pull policy for the init container."
        }
      },
      "required": [
        "repository",
        "tag",
        "imagePullPolicy"
      ]
    },
    "deploymentStrategy": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Recreate",
            "RollingUpdate"
          ],
          "description": "The type of deployment strategy."
        },
        "rollingUpdate": {
          "description": "Options for the RollingUpdate strategy."
        }
      }
    },
    "revisionHistoryLimit": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of old ReplicaSets to retain."
    },
    "persistence": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "size": {
              "type": "string"
            },
            "accessMode": {
              "type": "string"
            }
          }
        },
        "plugins": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "size": {
              "type": "string"
            },
            "accessMode": {
              "type": "string"
            }
          }
        }
      }
    },
    "service": {
