      "properties": {
        "type": {
          "type": "string"
        },
        "externalPort": {
          "type": "integer"
        },
        "internalPort": {
          "type": "integer"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "loadBalancerSourceRanges": {
          "type": "array",
